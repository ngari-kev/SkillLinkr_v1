    email kevngariwangui@gmail.com
}

skilllinkr.ngarikev.tech {
    tls {
        protocols tls1.2 tls1.3
    }

    @api {
        path /api/*
    }

    handle @api {
        methods POST GET
        uri strip_prefix /api
        reverse_proxy backend:5000 {
            header_up Host {upstream_hostport}
        }
    }

    handle {
        root * /srv
        try_files {path} /index.html
        file_server
    }

    # Basic compression
    encode zstd gzip
}
